{
  "singleQuote": true,
  "endOfLine": "lf",
  "semi": true,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "printWidth": 80,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": [
    "^react",
    "^node_modules/.*$",
    "^@/shared/helpers",
    "^@/shared/types",
    "^@/shared/.*$",
    "^@/pages/.*$",
    "^@/modules/.*$",
    "^@/components/.*$",
    "^@/ui/.*$",
    "^@/assets/.*$",
    ".*\\.tsx$",
    ".*\\.css$",
    "^[./]"
  ]
}
